Lyte.Component.registerHelper("formatDateForTerritory",(function(e){if(e){var t,r,n,s,i=null,a=null,o=null,l=null;i=$L.moment(e).toDate(),(l=(o=e).substring(o.length-6).split(":"))[0].substring(0,1),l[1]=parseInt(l[1]),i=$L.moment(o.substr(0,o.length-6)).toDate();t=I18n.getMsg(["Jan","Feb","Mar","Apr","May","Jun","Jul","Aug","Sep","Oct","Nov","Dec"][i.getMonth()]),r=i.getDate(),n=i.getFullYear(),s=I18n.getMsg(["Sun","Mon","Tue","Wed","Thu","Fri","Sat"][i.getDay()]),a=Utils.getTimeStringWithAmPm(i);var m=Crm.userDetails.LOCALE.split("_")[0];return"ja"===m||"zh"===m?CrmDateUtils.convertDateAndTimeApiFormatToUserViewFormat(e):s+", "+r+" "+t+" "+n+" "+a.hrs+":"+a.mins+" "+a.meridiem.toUpperCase()}})),Lyte.Component.registerHelper("dateAndTimeInUserFormat",(function(e){if(e&&"string"==typeof e&&e.match("T")){e=(e=e.replace(/[+-]\d{2}:\d{2}/,"")).split("T");var t=$L.moment(e[0]).toDate(),r=e[1]?e[1].split(":"):"";r&&(t.setHours(r[0]),t.setMinutes(r[1]));var n=Utils.getDateTimeInUserFormat(t,!0),s=n.slice(0,3);return n.replace(s,I18n.getMsg(s))}return e}));
