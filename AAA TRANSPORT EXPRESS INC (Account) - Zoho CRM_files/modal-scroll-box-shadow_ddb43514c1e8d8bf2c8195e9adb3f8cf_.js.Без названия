Lyte.Mixin.register("modal-scroll-box-shadow",{getInternalElementsNames:function(o){var t={content:"",footer:""};switch(o=o||"modal"){case"modal":t={content:"lyte-modal-content",footer:"lyte-modal-footer"};break;case"popover":t={content:"lyte-popover-content",footer:"lyte-popover-footer"}}return t},applyScrollShadow:function(o,t){var e=this.getInternalElementsNames(t),n=$L(o).find(e.content);this.updateScrollBoxShadow(o,t),n.off("scroll"),n.on("scroll",function(){this.updateScrollBoxShadow(o,t)}.bind(this))},updateScrollBoxShadow:function(o,t){var e=this.getInternalElementsNames(t),n=$L(o).find(e.content),l=n.scrollTop(),r=$L(o).find(e.footer);parseInt(l+n.innerHeight())+10>=n[0].scrollHeight?r.removeClass("box-sh"):r.addClass("box-sh")},removeScrollShadow:function(o,t){var e=this.getInternalElementsNames(t);$L(o).find(e.content).off("scroll")},handleCtrlSpace:function(){shortcut.register(["ctrl+space"],(function(){_lyteUiUtils.getVisibleDropdowns().forEach((function(o){o.close()}))}))}});
